
input,
button,
textarea {
  font: inherit;
  color: inherit;
}

.total,
input[type=number] {
  text-align: right;
}

fieldset {
  background: white;
  padding: $gutter $gutter $gutter-2 $gutter;
  border: 0;
  border-radius: $gutter-4;
  margin: 0 0 $gutter;
}
.actions {
  padding: 0 $gutter $gutter-2 $gutter;
}
.detail-actions {
  text-align: right;
  margin-bottom: $gutter-2;
}
.legend {
  font-size: 18px;
  font-weight: normal;
  text-transform: uppercase;
  margin: 0;
  padding: 0 0 $gutter;
}

// INPUTS A LA SOLVED-BY-FLEXBOX
.input {
  display: flex;
  margin-bottom: $gutter;

  .field {
    flex: 1;
  }
  .field:not(:first-child) {
    border-left: 0;
  }
  .field:not(:last-child) {
    border-right: 0;
  }

  .item {
    background-color: rgba(147, 128, 108, 0.1);
    color: #666666;
    font: inherit;
    font-weight: normal;
  }

  .field,
  .item {
    border: 1px solid rgba(147, 128, 108, 0.25);
    padding: 0.5em 0.75em;
  }
  .field:first-child,
  .item:first-child {
    border-radius: 2px 0 0 2px;
  }
  .field:last-child,
  .item:last-child {
    border-radius: 0 2px 2px 0;
  }
}

// FLOATING LABEL
.input-float {
  position: relative;
  border: 1px solid rgba(147, 128, 108, 0.25);

  & + .input-float {
    margin-top: 1.5em;
  }

  input,
  textarea {
    width: 100%;
    outline: none;
  }

  input,
  textarea,
  label {
    padding: 0.5em 0.75em;
    border: 0;
  }
  label {
    display: inline-block;
    position: absolute;
    top: 0;
    left: 0;
    transition: all .25s;
    background: rgba(white, 0);
    padding-bottom: 0;
  }
  .is-floating {
    font-size: .75em;
    top: -1.5em;
    background: rgba(white, 1);
    color: rgba(black, .5);
  }
}
