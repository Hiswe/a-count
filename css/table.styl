table {
  border: 0;
  width: 100%;
  text-align: left;
  border-radius: $gutter-4;
  table-layout: fixed;
}

tr {
  vertical-align: top;
}

.table-pres {
  background: white;
  border-radius: $gutter-4;

  thead {
    background: #222;
    color: white;
  }

  a {
    color: steelblue;
    &:hover {
      color: black;
    }
  }

  th {
    font-weight: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-transform: uppercase;
    font-size: 12px;
    padding: 1em 1.3em;

    &:first-child {
      border-top-left-radius: $gutter-4;
    }
    &:last-child {
      border-top-right-radius: $gutter-4;
    }
  }

  tbody tr:nth-child(even) {
    background: #EEE;
  }

  td {
    padding: .5em 1em;

    p {
      margin: 0;
    }
  }
}

.table-form {
  border: 1px solid rgba(147, 128, 108, 0.25);
  margin-bottom: $gutter-2;

  thead {
    border-bottom: 1px solid rgba(147, 128, 108, 0.25);
  }

  th:nth-child(1) {

  }
  th:nth-child(2),
  th:nth-child(3),
  th:nth-child(4),
  th:nth-child(5) {
    width: 7em;
  }
  th:nth-child(6) {
    width: 3em;
  }

  th {
    background-color: rgba(147, 128, 108, 0.1);
    color: #666666;
    font: inherit;
    font-weight: normal;
    padding: 0.5em 0.75em;
    border-bottom: 1px solid rgba(147, 128, 108, 0.25);

    + th {
      border-left: 1px solid rgba(147, 128, 108, 0.25);
    }
  }

  td + td {
    border-left: 1px solid rgba(147, 128, 108, 0.25);
  }

  tr + tr td {
    border-top: 1px solid rgba(147, 128, 108, 0.25);
  }

  .amount {
    margin: 0;
  }

  .total,
  input,
  textarea {
    padding: 0.5em 0.75em;
  }
  input,
  textarea {
    width: 100%;
    border: 0;
  }
  tfoot td {
    border-top: 1px solid rgba(147, 128, 108, 0.25);
    padding: 0.5em 0.75em;
    background-color: rgba(147, 128, 108, 0.1);
    text-align: right;
    font-weight: bold;
  }
}
