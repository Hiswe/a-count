.id {
  opacity: .5;
}

//
// BUTTONS
//

$btn {
  border: 1px solid;
  padding: .75em 1em;
  border-radius: $gutter-4;
  cursor: pointer;
  display: inline-block;
}

.btn {
  @extend $btn;
  border-color: steelblue;
  background: steelblue;
  color: white;

  &:hover {
    background: white;
    color: steelblue;
  }
}
.btn-secondary {
  @extend $btn;
  border-color: #cddce4;
  background: #cddce4;
  color: darken(#cddce4, 30%);

  &:hover {
    background: white;
  }
}

.btn-circular {
  @extend .btn;
  font-size: 1.5em;
  width: 1.75em;
  height: @width;
  line-height: (@width * .9);
  border-radius: @width;
  padding: 0;
  text-align: center;

  h1 & {
    font-size: 24px;
    float: right;
  }
}
