header {
  background: #222;


  li {
    display: inline-block;

    &:last-child {
      border-right: 1px solid rgba(white, .1);
    }

    +mq('centered') {
      border-left: 1px solid rgba(white, .1);
    }

    + li {
      border-left: 1px solid rgba(white, .1);
    }
  }

  a {
    color: #EEE;
    padding: 1em 2em;
    display: inline-block;

    &:hover {
      background: steelblue;
    }
  }
}
